resources:
- type: compute.v1.network
  name: {{ env["deployment"] }}-spinnaker-network
  properties:
     name: spinnaker-network
     autoCreateSubnetworks: false
- type: compute.v1.subnetwork
  name: {{ env["deployment"] }}-spinnaker-subnetwork
  properties:
    name: {{ env["deployment"] }}-spinnaker-subnetwork
    network: $(ref.{{ env["deployment"] }}-spinnaker-network.selfLink)
    ipCidrRange: {{ properties["ipCidrRange"] }}
    region: {{ properties["region"] }}
- type: compute.v1.firewall
  name: spinnaker-vm-ssh-fw
  properties:
     name: spinnaker-vm-ssh
     network: $(ref.{{ env["deployment"] }}-spinnaker-network.selfLink)
     allowed:
     - IPProtocol: tcp
       ports: ["22"]
     targetTags:
     - allow-ssh
- type: compute.v1.firewall
  name: redis-fw
  properties:
    name: redis-vm
    network: $(ref.{{ env["deployment"] }}-spinnaker-network.selfLink)
    allowed:
    - IPProtocol: tcp
      ports: ["6379"]
    sourceTags:
      - spinnaker-vm
    targetTags:
      - redis-vm
- type: compute.v1.firewall
  name: jenkins-fw
  properties:
     name: jenkins-vm-from-spinnaker
     network: $(ref.{{ env["deployment"] }}-spinnaker-network.selfLink)
     allowed:
     - IPProtocol: tcp
       ports: ["80","8080"]
     sourceTags:
     - spinnaker-vm
     targetTags:
     - jenkins-vm
- type: compute.v1.firewall
  name: jenkins-hc
  properties:
    name: jenkins-vm-hc
    network: $(ref.{{ env["deployment"] }}-spinnaker-network.selfLink)
    allowed:
    - IPProtocol: tcp
      ports: ["80"]
    sourceRanges:
    - "130.211.0.0/22"
    targetTags:
    - jenkins-vm
- type: compute.v1.firewall
  name: spinanker-hc
  properties:
    name: spinanker-vm-hc
    network: $(ref.{{ env["deployment"] }}-spinnaker-network.selfLink)
    allowed:
    - IPProtocol: tcp
      ports: ["9000"]
    sourceRanges:
    - "130.211.0.0/22"
    targetTags:
    - spinnaker-vm
